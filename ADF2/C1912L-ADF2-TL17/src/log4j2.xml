<Configuration name="PropertiesConfig">
    <Appenders>
        <File name="fileappender" fileName="applogs/logfile.log" >
            <PatternLayout>
                <pattern>
                    %d{yyyy-MM-dd HH:mm:ss.SSS} %msg%n
                </pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="fileappender"/>
        </Root>
    </Loggers>
</Configuration>
